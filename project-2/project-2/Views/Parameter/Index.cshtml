@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Domain.cParameter>

@{
    ViewData["Title"] = "Vizsgálati paraméterek";
}
<partial name="_ListingHeader" model="Model.Count()" />

<table class="table table-striped stickyheader">
    <thead>
        <tr>
            <th>
                Paraméter kód
            </th>
            <th>
                HUMVI leírás
            </th>
            <th>
                Saját leírás
            </th>
            <th>
                Parametrikus érték
            </th>
            <th>
                Parametrikus érték jellege
            </th>
            <th>
                Létrehozva
            </th>
            <th>
                Utolsó módosítás
            </th>
            <th class="actioncol"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParKod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HumviLeiras)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SajatLeiras)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParamErtek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParamTip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td class="actioncol">
                    <partial name="_ListingActions" model="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>
