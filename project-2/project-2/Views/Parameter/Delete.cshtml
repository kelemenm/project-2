@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.cParameter

@{
    ViewData["Title"] = "Delete";
}

<h1>Vizsgálati paraméterek</h1>

<div>
    <h4>Biztosan törölni akarja a rekordot?</h4>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
             Paraméter kód
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParKod)
        </dd>
         <dt class = "col-sm-2">
             HUMVI leírás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HumviLeiras)
        </dd>
         <dt class = "col-sm-2">
             Saját leírás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SajatLeiras)
        </dd>
         <dt class = "col-sm-2">
             Parametrikus érték
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParamErtek)
        </dd>
        <dt class = "col-sm-2">
           Parametrikus érték jellege
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParamTip)
        </dd>
        <dt class = "col-sm-2">
            Létrehozva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            Utolsó módosítás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>    
    </dl>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken() <!-- Ensure CSRF token is included for security -->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">Mégsem</a>
    </form>
</div>
