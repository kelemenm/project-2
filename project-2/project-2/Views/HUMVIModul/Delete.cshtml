@model Domain.cHUMVImodul

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<h1>HUMVI modulkódok</h1>

<div>
    <h4>Biztosan törölni akarja a rekordot?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Modul kód
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModulKod)
        </dd>
        <dt class = "col-sm-2">
           Leírás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leiras)
        </dd>
        <dt class = "col-sm-2">
            Létrehozva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            Utolsó módosítás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
    </dl>
    
    <form id="deleteForm" action="/HumviModul/Delete" asp-action="Delete" method="post">
        @Html.AntiForgeryToken() <!-- Ensure CSRF token is included for security -->
        <input hidden asp-for="Id" class="form-control" id="Id" name="Id" value="@Model.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |        
        <a href="#" onclick="showPage('humviModul')">Back to List</a>
    </form>
</div>
