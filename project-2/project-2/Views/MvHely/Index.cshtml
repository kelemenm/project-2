@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Domain.cMvHely>

@{
    ViewData["Title"] = "Mintavételi helyek";
}
<partial name="_ListingHeader" model="Model.Count()" />

<table class="table table-striped stickyheader">
    <thead>
        <tr>
            <th>
                Azonosító
            </th>
            <th>
                Név, saját
            </th>
            <th>
                Vízbázis
            </th>
            <th>
                Település
            </th>
            <th>
                Típus
            </th>
            <th>
                GPS_N_Y
            </th>
            <th>
                GPS_E_X
            </th>
            <th>
                Létrehozva
            </th>
            <th>
                Utolsó módosítás
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MvhKod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NevSajat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VizBazis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telepules)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipus)
                </td>
                <td>
                    @((item.GPS_N_Y.HasValue) ? item.GPS_N_Y.Value.ToString("F5") : "")
                </td>
                <td>
                    @((item.GPS_E_X.HasValue) ? item.GPS_E_X.Value.ToString("F5") : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Edit" asp-route-id="@item.Id">Szerkeszt</a>
                    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Details" asp-route-id="@item.Id">Részletek</a>
                    <a class="btn btn-danger btn-sm" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Delete" asp-route-id="@item.Id">Törlés</a>
                </td>
            </tr>
        }
    </tbody>
</table>
