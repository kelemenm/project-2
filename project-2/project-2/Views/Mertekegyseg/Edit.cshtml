@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.cMertekegyseg

@{
    ViewData["Title"] = "Edit";
}

<h1>Mértékegységek</h1>

<h4>Szerkesztés</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken() <!-- Ensure CSRF token is included for security -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input asp-for="Id" class="form-control" id="Id" name="Id" value="@Model.Id" readonly/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Megyseg" class="control-label">Mértékegység kód</label>
                <input type="text" asp-for="Megyseg" class="form-control" id="Megyseg" name="Megyseg" value="@Model.Megyseg" />
                <span asp-validation-for="Megyseg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HumviLeiras" class="control-label">HUMVI leírás</label>
                <input type="text" asp-for="HumviLeiras" class="form-control" id="HumviLeiras" name="HumviLeiras" value="@Model.HumviLeiras"/>
                <span asp-validation-for="HumviLeiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SajatLeiras" class="control-label">Saját leírás</label>
                <input type="text" asp-for="SajatLeiras" class="form-control" id="SajatLeiras" name="SajatLeiras" value="@Model.SajatLeiras"/>
                <span asp-validation-for="SajatLeiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label">Létrehozva</label>
                <input asp-for="Created" class="form-control" id="Created" name="Created" value="@Model.Created" readonly/>
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastModified" class="control-label">Utolsó módosítás</label>
                <input asp-for="LastModified" class="form-control" id="LastModified" name="LastModified" value="@Model.LastModified" readonly/>
                <span asp-validation-for="LastModified" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Mentés" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">Mégsem</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
