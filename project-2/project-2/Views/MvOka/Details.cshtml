@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.cMvOka

@{
    ViewData["Title"] = "Details";
}

<h1>Mintavétel oka</h1>

<div>
    <h4>Részletek</h4>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
             Mintavétel oka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvOk)
        </dd>
        <dt class = "col-sm-2">
           Leírás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leiras)
        </dd>
        <dt class = "col-sm-2">
            Létrehozva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            Utolsó módosítás
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Edit" asp-route-id="@Model.Id">Szerkeszt</a>
    <a class="btn btn-secondary" asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">Mégsem</a>
</div>
