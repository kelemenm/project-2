@model Domain.cMvOka

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<script src="/_framework/aspnetcore-browser-refresh.js"></script>

<h1>Mintavétel oka</h1>

<h4>Új rekord létrehozása</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken() <!-- Ensure CSRF token is included for security -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MvOk" class="control-label">Mintavétel oka</label>
                <input type="text" asp-for="MvOk" class="form-control" id="MvOk" name="MvOk" value="@Model.MvOk" />
                <span asp-validation-for="MvOk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leiras" class="control-label">Leírás</label>
                <input type="text" asp-for="Leiras" class="form-control" id="Leiras" name="Leiras" value="@Model.Leiras" />
                <span asp-validation-for="Leiras" class="text-danger"></span>
            </div>
            <!-- Hidden fields for Created, LastModified -->
            <div class="form-group" style="display:none;">
                <label for="Created">Created</label>
                <input type="hidden" id="Created" name="Created" value="@DateTime.UtcNow" />
            </div>

            <div class="form-group" style="display:none;">
                <label for="LastModified">LastModified</label>
                <input type="hidden" id="LastModified" name="LastModified" value="@DateTime.UtcNow" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/MvOka/Index" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

